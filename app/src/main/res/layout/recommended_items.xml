<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/yellowish_brown">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/recommended_item_image"
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nike1"
            app:riv_corner_radius="14dp"/>

        <TextView
            android:id="@+id/recommended_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:fontFamily="@font/aclonica"
            android:textSize="18sp"
            android:textColor="@color/darkBlue_green"
            android:textStyle="bold"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/recommended_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="description"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/bright_orange"
            android:layout_marginStart="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/ratingbar"/>
            <TextView
                android:id="@+id/recommended_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5)"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>